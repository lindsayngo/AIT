<div class = everything>

    <h1> Books </h1>

    {{!-- Filter option --}}
    <div class = filter> 
        Filter By: 
        <form method = "GET" action = "http://localhost:3000/books">
            <p class="options">
                <select name = "category">
                    <option value="">--Please choose an option--</option>
                    <option name = "title" value="title">Title</option>
                    <option name = "author" value="author">Author</option>
                    <option name = "isbn" value="isbn">ISBN</option>
                </select>
            </p>
            <p>  <input type = "text" name = "filterby"> </input></p>
        <input type = "submit" value = "filter">
    </form>

    </div>

