    <div class = book>
    <table>
    {{#each books as |b|}}
        <tr> 
            <th class = titlelink> <a href = "http://localhost:3000/books/{{slug}}"> {{title}} </a> </th>
            <th>{{author}} </th>
            <th>{{isbn}}</th>
        </tr>
    {{/each}}
    </table>
    </div>
    
